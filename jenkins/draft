pipeline {
    agent any
    
    stages {
        stage ('1 choice') {
            when {
                    expression ( choice == '1')
                }
                steps {
                    echo "Hello 1 choice"                
                }
        }
        stage ('2 choice') {
            when {
                    expression ( choice == '2')
                }
                steps {
                    echo "Hello 2 choice" 
                }
        }
    }
}