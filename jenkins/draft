pipeline {
    agent any
    parameters {
        choice(name: 'STAGE', choices: ['build' , 'deploy'], description: 'stages to build')
    }

    stages {
        stage (params.STAGE == 'build') {
            steps {
                sh '''
                #!/bin/bash
                echo "start build stage"
                pwd
                ls
                date
                '''                
            }
        }
        stage (params.STAGE == 'deploy') {
            steps {
                sh '''
                #!/bin/bash
                echo "start deploy stage"
                touch file1
                ls
                '''
            }
        }
    }
}