pipeline {
    agent any
    
    stages {
        stage ('BUILD') {
            when {
                    expression ( choice == 'build')
            }
            steps {
                sh '''
                #!/bin/bash
                pwd
                ls
                date
                '''                
            }
        }
        stage ('DEPLOY') {
            when {
                    expression ( choice == 'deploy')
            }
            steps {
                sh '''
                #!/bin/bash
                touch file1
                ls
                '''
            }
        }
    }
}