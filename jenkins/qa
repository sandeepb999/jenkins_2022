pipeline {
    agent any
    
    stages {
        stage ('stage1') {
            when {
                expression { option == '1'}
                }
                steps {
                    echo "Hello"                
                }
        }
        stage ('stage2') {
            when {
                expression { option == '2'}
                }
                steps {
                    echo "Hi" 
                }
        }
        stage ('stage3') {
            when {
                expression { option == '2'}
                }
                steps {
                    echo "Hi, this is stage3" 
                }
        }
    }
}